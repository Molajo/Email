{
    "name": "molajo/email",
    "type": "molajo-package",
    "description": "Molajo Email: platform independent support with adapters for PHPMailer, SwiftMail, and native PHP mail",
    "keywords": [
        "Email",
        "Molajo",
        "phpMailer",
        "Swiftmail"
    ],
    "homepage": "http://github.com/Molajo/Email",
    "license": "MIT",
    "authors": [
        {
            "name": "Amy Stephen",
            "email": "AmyStephen@Molajo.org",
            "homepage": "http://AmyStephen.com"
        }
    ],
    "require": {
        "php": ">=5.4",
        "commonapi/email": "dev-master",
        "phpMailer/phpMailer": "dev-master",
        "swiftmailer/swiftmailer": "dev-master"
    },

    "support": {
        "email": "hello@molajo.org",
        "irc": "irc://irc.freenode.org/molajo"
    },
    "autoload": {
        "psr-4": {
            "Molajo\\Email\\": "Source/",
            "Molajo\\Factories\\": "Factories/"
        }
    },

    "archive": {
        "exclude": ["/.dev"]
    },

    "minimum-stability": "dev"
}
